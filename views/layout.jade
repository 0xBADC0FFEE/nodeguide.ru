!!! 5
html(lang="ru")
  head
    title!=doc.title
    meta(charset='utf-8')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/pygments.css')
    /if IE
        script(src="http://html5shiv.googlecode.com/svn/trunk/html5.js", 
               type="application/javascript")
  body

    div.document
        a(href='http://github.com/ekalinin/nodeguide.ru') 
            img(alt='Fork me on GitHub',
                style='position: fixed; top: 0; right: 0; border: 0;'
                src='http://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png')
        div.documentwrapper
            div.bodywrapper
                div.body
                    !{doc.body}
        div.sphinxsidebar
            div.sphinxsidebarwrapper
                - if (doc.rellinks)
                    h3 Связанные темы
                    ul
                        li
                            a(href='/') Главная
                        - each link in doc.rellinks
                            li
                                - if (link[0] != 'genindex')
                                    a(href='/doc/'+link[0]) !{link[1]}
                - if (doc.toc)
                    h3 Оглавление
                    !{doc.toc}
        div.clearer

    div.footer
        &copy;
        a(href='/') nodeguide.ru
        &nbsp;
        последнее обновление: #{env.last_updated}

    - if (host != 'shorrty-nb')
        script
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-9001714-4']);
            _gaq.push(['_trackPageview']);

            (function() {
              var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
              ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
              var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();

